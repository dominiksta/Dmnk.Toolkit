<r-overlay-scrollbar 
    class="r-overlay-scrollbar" 
    style="@Style" 
    data-overlayscrollbars-initialize>
    @ChildContent
</r-overlay-scrollbar>

@code {
    [Parameter, EditorRequired]
    public required RenderFragment ChildContent { get; set; }
    
    [Parameter]
    public string? Style { get; set; }
}